<div data-ctrl="Blog">
  <div class="themes-block">
    <div class="container">
      <div class="blog-themes open" id="<%= @item.seo_name%>">
        <h2><%= @item.title%></h2>

        <% if @item.parent && @item.parent.only_photos %>
          <ul class="subcategories">
            <% @item.parent.childrens.each do |sub|%>
              <li><a href="<%= url("blog/category/#{sub.seos.join("/")}") %>"><%= sub.title%></a></li>
            <% end %>
          </ul>
          <div class="clear"></div>
        <% end%>


        <% @item.pages.each do |page|%>
          <div class="theme-item">
            <div class="image-block">
                <a href="<%= url("blog/item/#{page.seos.join('/')}")%>">
                  <img class="blog-img" src="<%= page.logo%>" alt="<%= page.title%>">
                </a>
            </div>

            <div class="text">
              <h5><%= page.title%></h5>
              <p><%= truncate(page.anons, length: 300,omission: '...') %> <a href="<%= url("blog/item/#{page.seos.join('/')}")%>"><%=t("school.show_more")%></a></p>
            </div>
          </div>
        <% end %>
        <div class="clear"></div>
        <a href="<%= url("blog") %>" class="more"><%=t("school.back_to_blog")%></a>
      </div>
    </div>
  </div>

  <% if @similar.any? %>
    <%= render partial: "shared/similar", locals:{similar: @similar} %>
  <% end %>
</div>
