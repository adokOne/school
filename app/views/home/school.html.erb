<div class="about skool">
  <div class="container">
    <div class="baloon">
      <%= image_tag "baloon-2.png" %>
    </div>
    <div class="cloud">
      <%= image_tag "cloud.png" %>
    </div>
    <div class="birds">
      <%= image_tag "birds.png" %>
    </div>
    <div class="birds two">
      <%= image_tag "birds-2.png" %>
    </div>
    <div class="text">
      <h2><%= t("school.about_school")%></h2>
      <%= t("school.school_about_desc").html_safe%>
