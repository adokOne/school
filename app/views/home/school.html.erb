<div class="about skool">
  <% if random_ad.present? %>
  <div class="advertising" style="color:<%= random_ad.color%>">
  <a href="#" class="close"></a>
    <div class="container_small">
    <div class="ad_text">
        <h1>

            <a target="_blank" href="<%= random_ad.link%>"><%= random_ad.desc.html_safe%></a>
            <a target="_blank" class="desc" href="<%= random_ad.link%>"><%= random_ad.text.html_safe%></a>

        </h1>
    </div>


      <div class="image-holder">
        <%= image_tag random_ad.image %>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <% end %>
  <div class="container">
    <div class="baloon">
      <%= image_tag "baloon-2.png" %>
    </div>
    <div class="cloud">
      <%= image_tag "cloud.png" %>
    </div>
    <div class="birds">
      <%= image_tag "birds.png" %>
    </div>
    <div class="birds two">
      <%= image_tag "birds-2.png" %>
    </div>
    <div class="text">
      <h2><%= t("school.about_school")%></h2>
      <%= t("school.school_about_desc").html_safe%>
    </div>
    <%= image_tag "complex-2.png" %>
    <a href="<%= url("test/attempts/new")%>" class="owl">
      <p class="bobble"><%= t("school.pass_test")%></p>
    </a>
  </div>
</div>

<div class="steps-block">
  <h2>наші переваги:</h2>
  <div class="wave one"></div>
  <div class="wave two"></div>
  <div class="container">
    <div class="steps steps_five">
      <div class="step">
        <span class="one"></span>
        <p><%= t("school.step_1_alt")%></p>
      </div>
      <div class="step">
        <span class="two"></span>
        <p><%= t("school.step_2_alt")%></p>
      </div>
      <div class="step">
        <span class="three"></span>
        <p><%= t("school.step_3_alt")%></p>
      </div>
      <div class="step">
        <span class="four"></span>
        <p><%= t("school.step_4_alt")%></p>
      </div>
      <div class="step">
        <span class="five"></span>
        <p><%= t("school.step_5_alt")%></p>
      </div>
    </div>
  </div>
</div>
<% if @courses.any? %>
  <%= render partial: "shared/courses", locals:{courses: @courses, is_club: false} %>
<% end %>

<% if @teachers.any? %>
  <%= render partial: "shared/teachers", locals:{teachers: @teachers} %>
<% end %>
<%if @photos.any? %>
  <%= render partial: "shared/galery", locals:{photos: @photos} %>
<% end %>

<%if @reviews.present? %>
  <%= render partial: "shared/reviews", locals:{reviews: @reviews} %>
<% end %>
