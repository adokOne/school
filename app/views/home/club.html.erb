<div class="about" id="about">
  <div class="container">
    <div class="baloon">
      <%= image_tag "baloon.png" %>
    </div>
    <div class="cloud">
      <%= image_tag "sun.png" %>
    </div>
    <div class="cloud two">
      <%= image_tag "cloud.png" %>
    </div>
    <div class="birds">
      <%= image_tag "birds.png" %>
    </div>
    <div class="birds two">
      <%= image_tag "birds-2.png" %>
    </div>
    <div class="text">
      <h2><%= t("school.about_club")%></h2>
      <%= t("school.club_about_desc").html_safe%>
    </div>
    <div class="owl">
      <p class="bobble-green right"><%= t("school.first_free")%></p>
    </div>
  </div>
</div>

<div class="steps-block">
  <div class="wave one"></div>
  <div class="wave two"></div>
  <div class="container">
    <div class="ship"></div>
    <div class="shark"></div>
    <div class="steps">
      <div class="step">
        <span class="one"></span>
        <p><%= t("school.step_1")%></p>
      </div>
      <div class="step">
        <span class="two"></span>
        <p><%= t("school.step_2")%></p>
      </div>
      <div class="step">
        <span class="three"></span>
        <p><%= t("school.step_3")%></p>
      </div>
    </div>
  </div>
</div>

<% if @courses.any? %>
  <%= render partial: "shared/courses", locals:{courses: @courses, is_club: true} %>
<% end %>
<% if @teachers.any? %>
  <%= render partial: "shared/teachers", locals:{teachers: @teachers} %>
<% end %>
<%if @photos.any? %>
  <%= render partial: "shared/galery", locals:{photos: @photos} %>
<% end %>
<%if @reviews.present? %>
  <%= render partial: "shared/reviews", locals:{reviews: @reviews} %>
<% end %>
