<div data-ctrl="Form" style="display:none" id="call_subscribe_popup" data-type="call">
  <div class="overlay"></div>
    <!-- підписка на новини -->
  <div class="form-block">
    <a href="#" class="close"></a>
    <h2><%= t("school.call_subscribe_popup_header")%></h2>
    <%= form_for @subscriber, url: call_path do |f|%>
      <div class="user-data">
        <div class="form-row">
          <%=f.text_field :name, class:"txtinput fl", placeholder: t('school.name_plc'), required: true  %>
          <%=f.text_field :phone, class:"txtinput fr", placeholder: t('school.phone_plc'), required: true  %>
        </div>
      </div>

      <a href="#" class="subscribe js-submit"><%= t("school.subscribe_for_call")%></a>
    <% end%>

    <div class="owl error hidden">
      <p class="bobble"><%= t("school.fields_wit_errors_text").html_safe%></p>
    </div>
  </div>
</div>
