<div data-ctrl="Form" style="display:none" id="lesson_subscribe_popup">
  <div class="overlay"></div>
    <!-- підписка на новини -->
  <div class="form-block">
    <a href="#" class="close"></a>
    <h2><%= t("school.lesson_subscribe_popup_header")%></h2>
    <%= form_for @subscriber, url: subscribe_path do |f|%>
       <%=f.hidden_field "#{@links_type}_subscribe", value: true  %>
       <%=f.hidden_field "course_id", value: 0  %>
      <div class="user-data">
        <div class="form-row">
          <%=f.text_field :name, class:"txtinput fl", placeholder: t('school.name_plc'), required: true  %>
          <select name="subscriber[level]" required="required">
            <option value="" selected="true" disabled="disabled"><%= t("school.choose_your_level")%></option>
            <% t("school.levels").each_pair do |k,v|%>
              <option value="<%= v %>"><%= v %></option>
            <% end %>
          </select>
        </div>
        <div class="form-row">
          <%=f.email_field :email, class:"txtinput fl", placeholder: t('school.email_plc'), required: true  %>
          <a target="_blank" href="<%= url("test/attempts/new")%>" class="subscribe test"><%= t("school.check_your_level")%></a>
        </div>
        <div class="form-row">
          <%=f.text_field :phone, class:"txtinput fl", placeholder: t('school.phone_plc'), required: true  %>
          <%=f.check_box :blog_subscribe,  {},true, false %>
          <label><%= t("school.subscribe_for_news_label")%></label>
        </div>
      </div>

      <a href="#" class="subscribe js-submit"><%= t("school.subscribe_for_lesson")%></a>
    <% end%>

    <div class="owl error hidden" >
      <p class="bobble"><%= t("school.fields_wit_errors_text").html_safe%></p>
    </div>
  </div>
</div>
