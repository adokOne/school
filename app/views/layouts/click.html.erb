    <%= stylesheet_link_tag 'click', media: 'all' %>
    <!--[if IE]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body class="<%= @body_cls%>" data-ctrl="Click">
    <header>
    <% if flash[:error].present? %>
      <div id="alert">
      <h2 style="color:red"><%=  flash[:error].html_safe    %></h2>
      </div>
      <script type="text/javascript">
        setTimeout(function(){ $("#alert").remove() }, 2000)
      </script>
    <% end%>
    <% if flash[:message].present? %>
      <div id="alert">
        <h2 style="color:green"><%=  flash[:message].html_safe    %></h2>
      </div>
      <script type="text/javascript">
        setTimeout(function(){ $("#alert").remove() }, 2000)
      </script>
    <% end%>
    </header>
    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <nav>
              <ul>

                <li>
                  <%= link_to t("click.menu_main"), click_url("/") %>
                </li>
                <li>
                  <%= link_to t("click.menu_about"), click_url("about.html") %>
                </li>


                <li>
                  <%= link_to t("click.menu_portfolio"), click_url("portfolio.html") %>
                </li>

                <li>
                  <%= link_to t("click.menu_price"), click_url("price.html") %>
                </li>

              </ul>
            </nav>
          </div>
          <div class="col-md-2">
            <p class="phone">+38(067) 574 21 88</p>
            <img src="/img/mail-logo.png" alt="mail-logo">
            <a href="mailto:it@uex.link" class="mail">it@uex.link</a>
          </div>
          <div class="col-md-3">
            <a href="http://uex.click"><img src="/img/footer-logo.png" alt="logo"></a>
          </div>
        </div>
      </div>
    </footer>
    <%= render "contact_form" %>
    <script type="text/javascript">

      (function(d, w, s) {
          var widgetId = '21870', gcw = d.createElement(s); gcw.type = 'text/javascript'; gcw.async = true;
          gcw.src = '//my.binotel.ua/getcall/widgets/'+ widgetId +'.js';
          var sn = d.getElementsByTagName(s)[0]; sn.parentNode.insertBefore(gcw, sn);
      })(document, window, 'script')
    </script>
  </body>
</html>
