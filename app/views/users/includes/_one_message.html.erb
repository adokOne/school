<li id="comment-32" class="comment even thread-even depth-1 parent">
  <article  class="comment-body">
     <footer class="comment-meta">
        <div class="comment-author vcard">
           <a href="<%= user_path(message.sender)%>">
             <img alt="" src="<%= message.sender.avatar %>" class="avatar avatar-83 photo" height="83" width="83">
           </a>
           <b class="fn"><%= message.topic%></b>
        </div>
        <div class="comment-metadata">
           <a href="#">
           <time datetime="<%= message.created_at%>"><%= l(message.created_at, format: :long)%></time>
           </a>
        </div>
     </footer>
     <div class="comment-content">
        <p><%= message.body%></p>
     </div>
     <% if message.sender != current_user %>
       <div class="reply">
        <a rel="nofollow" class="comment-reply-link" href="#respond" data-id="<%= message.id %>" ><%= t("uex.reply")%></a>
       </div>
     <% end %>
  </article>
  <% if message.childrens.present? %>
    <ol class="children">
       <% message.childrens.each do |message|%>
        <%= render "users/includes/one_message", message: message %>
       <% end  %>
    </ol>
  <% end %>
</li>
