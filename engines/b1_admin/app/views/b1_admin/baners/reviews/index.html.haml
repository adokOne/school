%div{:"ng-controller"=>"CrudController",:"data-url"=>baners_reviews_path,:"data-delete-text"=>t("b1_admin.delete_confirm")}
  #content-container
    #page-title
      %h1.page-header.text-overflow
        Отзывы
    #page-content
      .row
        .panel
          .panel-heading
            .panel-control
              %button.btn.btn-default{:name => "refresh", :title => "Refresh", :type => "button","ng-click"=>"itemsTable.reload()"}
                %i.fa.fa-refresh.icon-refresh
            %h3.panel-title Список отзывов

          .panel-body
            %div{style:"margin-top: 30px;"}
            %div{"cg-busy" => "{'promise': itemsPromise,'backdrop': true,'message': '#{t('b1_admin.loading')}'}"}
              %table.table.table-hover.table-striped.table-vcenter#itemsTable{"ng-table"=>"itemsTable"}
                %tr{"ng-repeat" => "item in data"}
                  %td{"data-title" => "'Email'"}
                    {{item.email}}
                  %td{"data-title" => "'Имя'"}
                    {{item.name}}
                  %td{"data-title" => "'Обьявление'"}
                    %a{href: "{{item.link}}", target: "_blank" } {{item.page}}

                  %td{"data-title" => "'Текст'"}
                    {{item.comment}}

                  %td{"data-title" => "'#{t('b1_admin.active')}'"}
                    %span.label.text-lg{"ng-class"=>"{'label-danger':!item.moderated,'label-success': item.moderated }"}
                      %span{"ng-switch" => "", :on => "item.moderated"}
                        %span{"ng-switch-when" => "true"}
                          =t('b1_admin._true')
                        %span{"ng-switch-default" => ""}=t('b1_admin._false')
                  %td.min-w-td.text-center{"data-title" => "'#{t('b1_admin.user_actions')}'"}
                    - if user_can?(:edit)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-success.fa.fa-pencil.add-tooltip{"tooltip" => "Опубликовать",href:"#{baners_reviews_path}/{{item.id}}/accept/","ng-click"=>"accept(item)",style:"margin-right: 15px;"}
                    - if user_can?(:destroy)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-danger.fa.fa-times.add-tooltip{"tooltip" => t("b1_admin.delete"), :href => "#","ng-click" => "destroy(item)"}
