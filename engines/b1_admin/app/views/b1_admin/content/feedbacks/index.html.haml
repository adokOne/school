%div{:"ng-controller"=>"CrudController",:"data-url"=>content_feedbacks_path,:"data-delete-text"=>t("b1_admin.delete_confirm")}
  #content-container
    #page-title
      %h1.page-header.text-overflow
        Контактная форма
    #page-content
      .row
        .panel
          .panel-heading
            .panel-control
              %button.btn.btn-default{:name => "refresh", :title => "Refresh", :type => "button","ng-click"=>"itemsTable.reload()"}
                %i.fa.fa-refresh.icon-refresh
            %h3.panel-title Список

          .panel-body
            %div{style:"margin-top: 30px;"}
            %div{"cg-busy" => "{'promise': itemsPromise,'backdrop': true,'message': '#{t('b1_admin.loading')}'}"}
              %table.table.table-hover.table-striped.table-vcenter#itemsTable{"ng-table"=>"itemsTable"}
                %tr{"ng-repeat" => "item in data"}
                  %td{"data-title" => "'Имя'"}
                    {{item.name}}
                  %td{"data-title" => "'#{t('b1_admin.email')}'"}
                    {{item.email}}
                  %td{"data-title" => "'#{t('b1_admin.phone')}'"}
                    {{item.phone}}

                  %td{"data-title" => "'Прочитано?'"}
                    {{item.admin_name}}
                    %span.label.text-lg{"ng-class"=>"{'label-danger':!item.processed,'label-success': item.processed }"}
                      %span{"ng-switch" => "", :on => "item.processed"}
                        %span{"ng-switch-when" => "true"}
                          =t('b1_admin._true')
                        %span{"ng-switch-default" => ""}=t('b1_admin._false')
                  %td{"data-title" => "'Сообщение'"}
                    {{item.message}}

                  %td.min-w-td.text-center{"data-title" => "'#{t('b1_admin.user_actions')}'"}
                    - if user_can?(:destroy)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-danger.fa.fa-times.add-tooltip{"tooltip" => t("b1_admin.delete"), :href => "#","ng-click" => "destroy(item)"}
                    - if user_can?(:set_processed)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-danger.fa.fa-search.add-tooltip{"tooltip" => "Отметить как прочитаное", :href => "#","ng-click" => "setProcessed(item)"}
