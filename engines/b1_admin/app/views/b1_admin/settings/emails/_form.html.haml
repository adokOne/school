#content-container
  #page-title
    %h1.page-header.text-overflow
      =t("b1_admin.email_teplates")
  #page-content{:"ng-controller"=>"CrudController","ng-init"=>"withLocales=true;editedItem=#{@item.serializable_hash.to_json}",:"data-url"=>settings_emails_path,:"data-delete-text"=>t("b1_admin.delete_permission_confirm")}
    .row
      .col
        .panel
          .panel-heading
            .panel-control
              = render "shared/lang_selector"
            %h3.panel-title=t("b1_admin.manage")
          = form_tag settings_emails_path ,class: "form-horizontal",novalidate: true,name: :itemForm do
            .panel-body
              .row
                .col-md-12
                  - I18n.available_locales.each do |l|
                    .form-group{"ng-class" => "{'has-error': itemForm.subject_#{l}.$invalid && itemForm.$submitted}",class: "lang lang_#{l}" ,style: "#{(I18n.default_locale.to_s == l.to_s ? '' : 'display:none')}" }
                      = label_tag :"subject_#{l}", t("b1_admin.title"), class:"col-sm-1 control-label"
                      .col-sm-10
                        = text_field_tag :"subject_#{l}","" ,class:"form-control", ng_required: "$root.required.langs.#{l}","ng-minlength"=>3, "ng-model"=>"editedItem.subject_#{l}"
                  .form-group{"ng-class" => "{'has-error': itemForm.seo_name.$invalid && itemForm.$submitted}"}
                    = label_tag :seo_name, t("b1_admin.seo_name"), class:"col-sm-1 control-label"
                    .col-sm-10
                      = text_field_tag :seo_name,"" ,class:"form-control",required: true,"ng-minlength"=>3, "ng-model"=>"editedItem.seo_name"

                  - I18n.available_locales.each do |l|
                    .form-group{"ng-class" => "{'has-error': itemForm.text_#{l}.$invalid && itemForm.$submitted}",class: "lang lang_#{l}" ,style: "#{(I18n.default_locale.to_s == l.to_s ? '' : 'display:none')}"}
                      = label_tag :"text_#{l}", t("b1_admin.email_text"), class:"col-sm-1 control-label"
                      .col-sm-10
                        .summernote{class: "summernote_#{l} lang lang_#{l}",style: "#{(I18n.default_locale.to_s == l.to_s ? '' : 'display:none')}",:"data-lang"=>l}
                        = text_area_tag :"text_#{l}","" ,class:"form-control hidden", ng_required: "$root.required.langs.#{l}", "ng-model"=>"editedItem.text_#{l}"

          - if user_can?(:create) || user_can?(:update)
            .panel-footer.text-right
              = link_to t("b1_admin.save"),"#", class:"btn btn-info","ng-click" => "save()"

