#content-container{:"ng-controller"=>"CrudController",:"data-url"=>settings_settings_path,:"data-delete-text"=>t("b1_admin.delete_role_confirm")}
  #page-title
    %h1.page-header.text-overflow
      Настройки
  #page-content
    .row
      .panel
        .panel-heading
          .panel-control
            %button.btn.btn-default{:name => "refresh", :title => "Refresh", :type => "button","ng-click"=>"itemsTable.reload()"}
              %i.fa.fa-refresh.icon-refresh
            %a.btn.btn-primary{href:new_settings_setting_path,"ng-click"=>"$root.setRoute('#{new_settings_setting_path}')"}=t("b1_admin.add")
          %h3.panel-title Список

        .panel-body
          %div{"cg-busy" => "{'promise': itemsPromise,'backdrop': true,'message': '#{t('b1_admin.loading')}'}"}
            %table.table.table-striped#itemsTable{"ng-table"=>"itemsTable"}
              %tr{"ng-repeat" => "item in data"}
                %td{"data-title" => "'Ключ'"}
                  {{item.key}}
                %td{"data-title" => "'Значение'"}
                  {{item.value}}
                %td.min-w-td.text-center{"data-title" => "'#{t('b1_admin.user_actions')}'"}
                  - if user_can?(:edit)
                    %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-success.fa.fa-pencil.add-tooltip{"tooltip" => t("b1_admin.edit"),href:"#{settings_settings_path}/{{item.id}}/edit/","ng-click"=>"$root.setRoute('#{settings_settings_path}/' + item.id + '/edit/')",style:"margin-right: 15px;"}
