%div{:"ng-controller"=>"CrudController",:"data-url"=>products_transactions_path,:"data-delete-text"=>t("b1_admin.delete_confirm")}
  #content-container
    #page-title
      %h1.page-header.text-overflow
        Транзакции
    #page-content
      .row
        .panel
          .panel-heading
            .panel-control
              %button.btn.btn-default{:name => "refresh", :title => "Refresh", :type => "button","ng-click"=>"itemsTable.reload()"}
                %i.fa.fa-refresh.icon-refresh
              %a.btn.btn-primary{href:new_products_transaction_path,"ng-click"=>"$root.setRoute('#{new_products_transaction_path}')"}=t("b1_admin.add")
            %h3.panel-title Список Транзакций

          .panel-body
            %div{style:"margin-top: 30px;"}
            %div{"cg-busy" => "{'promise': itemsPromise,'backdrop': true,'message': '#{t('b1_admin.loading')}'}"}
              %table.table.table-hover.table-striped.table-vcenter#itemsTable{"ng-table"=>"itemsTable"}
                %tr{"ng-repeat" => "item in data"}
                  %td{"data-title" => "'Пользователь'"}
                    {{item.name}} {{item.email}}
                  %td{"data-title" => "'Услуга'"}
                    {{item.description}}
                  %td{"data-title" => "'Сумма'"}
                    {{item.amount}}
                  %td{"data-title" => "'Дата'"}
                    {{item.created_at | date:'yyyy-MM-dd HH:mm'}}
                  %td{"data-title" => "'#{t('b1_admin.status')}'"}
                    %span.label.text-lg{style:"background-color:{{statusColors[item.status]}}"}
                      %span{"ng-switch" => "", :on => "item.status"}
                        %span{"ng-switch-when" => "0"}=t('uex.pay_statuses._0')
                        %span{"ng-switch-when" => "1"}=t('uex.pay_statuses._1')
                        %span{"ng-switch-when" => "2"}=t('uex.pay_statuses._2')
                        %span{"ng-switch-when" => "3"}=t('uex.pay_statuses._3')

                  %td.min-w-td.text-center{"data-title" => "'#{t('b1_admin.user_actions')}'"}
                    - if user_can?(:edit)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-success.fa.fa-pencil.add-tooltip{"tooltip" => t("b1_admin.edit"),href:"#{products_transactions_path}/{{item.id}}/edit/","ng-click"=>"$root.setRoute('#{products_transactions_path}/' + item.id + '/edit/')",style:"margin-right: 15px;"}
                    - if user_can?(:destroy)
                      %a.btn.btn-sm.btn-trans.btn-icon.btn-hover-danger.fa.fa-times.add-tooltip{"tooltip" => t("b1_admin.delete"), :href => "#","ng-click" => "destroy(item)"}
  - content_for :aside do
    .hidden
  %aside#aside-container
    #aside
      .panel
        .panel-heading
          %h3.panel-title
            %i.fa.fa-lg.fa-navicon.filter-toggler
            %span=t("b1_admin.filter")
        = form_tag products_transactions_path ,class: "form-horizontal",novalidate: true,name: :itemForm do
          .panel-body
            .col-sm-12
              .form-group{"ng-class" => "{'has-error': itemForm.email.$invalid && itemForm.$submitted}"}
                = label_tag :email, t("b1_admin.email"), class:"control-label"
                = text_field_tag :email,"" ,class:"form-control","ng-maxlength"=>255, "ng-model"=>"filters.email"
              .form-group{"ng-class" => "{'has-error': itemForm.status.$invalid && itemForm.$submitted}"}
                = label_tag :status, "Статус", class:"control-label"
                %select.form-control{"ng-model" => "filters.status", "ng-options" => "item.id as item.name for item in #{I18n.t('uex.pay_statuses').each_pair.map{|i,k| {name: k, id: i.to_s.sub("_","")}  }.to_json}"}
          .panel-footer.text-right
            %a.btn.btn-success{"ng-click"=>"filter()"}=t("b1_admin.do_filter")
            %a.btn.btn-warning{"ng-click"=>"reset()"}=t("b1_admin.reset_filter")
