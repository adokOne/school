#content-container
  #page-title
    %a.btn.btn-success.pull-right{href:school_courses_path,"ng-click"=>"$root.setRoute('#{school_courses_path}')"}=t("b1_admin.back_to_list")
    %h1.page-header.text-overflow
      Курси
  #page-content{:"ng-controller"=>"CrudController","ng-init"=>"editedItem=#{@item.serializable_hash.to_json};editedItem.course_type='#{Course::SCHOOL_TYPE}'", :"data-url"=>school_courses_path}
    .row
      .col
        .panel
          .panel-heading
            %h3.panel-title Створення редагування курсів
          = form_tag school_courses_path ,class: "form-horizontal",novalidate: true,name: :itemForm do
            .panel-body
              .row
                .col-md-8
                  .form-group{"ng-class" => "{'has-error': itemForm.name.$invalid && itemForm.$submitted}"}
                    = hidden_field_tag :course_type, Course::SCHOOL_TYPE, "ng-model" => "editedItem.course_type"
                    = label_tag :name, t("b1_admin.title"), class:"col-sm-3 control-label"
                    .col-sm-7
                      = text_field_tag :name,"" ,class:"form-control",required: true,"ng-minlength"=>3,"ng-maxlength"=>255, "ng-model"=>"editedItem.name"
                    / = label_tag :title, "Повна назва", class:"col-sm-3 control-label"
                    / .col-sm-7
                    /   = text_field_tag :title,"" ,class:"form-control",required: true,"ng-minlength"=>3,"ng-maxlength"=>255, "ng-model"=>"editedItem.title"
                    = label_tag :seo, "Ідентифкатор фонової картинки", class:"col-sm-3 control-label"
                    .col-sm-7
                      = text_field_tag :seo,"" ,class:"form-control",required: true,"ng-minlength"=>2,"ng-maxlength"=>255, "ng-model"=>"editedItem.seo"
                    = label_tag :fb_link, "Ссилка на групу у Faceebook", class:"col-sm-3 control-label"
                    .col-sm-8
                      = text_field_tag :fb_link,"" ,class:"form-control","ng-maxlength"=>255, "ng-model"=>"editedItem.fb_link"
                  .form-group{"ng-class" => "{'has-error': itemForm.date_end.$invalid && itemForm.$submitted}"}
                    = label_tag :name,"Дата початку", class:"col-sm-3 control-label"
                    .col-sm-7
                      .input-group
                        %input.form-control{"ng-focus"=>"status.opened = true",'close-text' => 'Close', 'type' => 'date', 'datepicker-popup' => '{{format}}', 'datepicker-options' => 'dateOptions', 'is-open' => 'status.opened', 'min-date' => 'today','max-date' => 'end_year', name: 'date_start', 'ng-model' => 'editedItem.date_start', type: 'text', required: true, "show-weeks"=>'false'}
                        %span.input-group-btn
                          %button.btn.btn-default{'ng-click' => 'open($event)', :type => 'button'}
                            %i.glyphicon.glyphicon-calendar
                  .form-group{"ng-class" => "{'has-error': itemForm.active.$invalid && itemForm.$submitted}"}
                    = label_tag :active, t("b1_admin.active"), class:"col-sm-3 control-label"
                    .col-sm-7
                      %input.js-switch{"ui-switch" => "true", type: "checkbox",id:"active", "ng-model"=>"editedItem.active"}
                  .form-group{"ng-class" => "{'has-error': itemForm.desc.$invalid && itemForm.$submitted}",class: "lang lang" }
                    = label_tag :"desc", t("b1_admin.desc"), class:"col-sm-3 control-label"
                    .col-sm-7
                      .summernote{class: "summernote lang",:"data-lang"=>"uk"}
                      = text_area_tag :"desc","" ,class:"form-control hidden",required: true, "ng-model"=>"editedItem.desc"


                  .form-group
                    = label_tag :logo_file_name, t("b1_admin.logo_file_name"), class:"col-sm-3 control-label"
                    .col-md-7
                      .ng-scope{:"flow-name"=>"logo", :"flow-file-added" => "!!{png:1,gif:1,jpg:1,jpeg:1}[$file.getExtension()]", :"flow-init" => "{singleFile:true,target:'#{namespace}/school/courses/'+editedItem.id + '/upload',testChunks:false}" ,:"flow-files-submitted"=>"$flow.upload()",:"ng-show" => "editedItem.id"}
                        .thumbnail{"ng-show" => "!$flow.files.length"}
                          %img{:"ng-src" => "{{editedItem.logo_file_name && ('/system/courses/' + editedItem.id + '/medium.png') || 'http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image'}}"}/
                        .thumbnail.ng-hide{:"ng-show" => "$flow.files.length"}
                          %img{"flow-img" => "$flow.files[0]"}/
                        %div
                          %span.btn.btn-primary{:"flow-btn" => "", :"ng-show" => "!$flow.files.length"}
                            Выбрать
                            %input{:style => "visibility: hidden; position: absolute;", :type => "file"}/
                          %span.btn.btn-info.ng-hide{:"flow-btn" => "", :"ng-show" => "$flow.files.length"}
                            Изменить
                            %input{:style => "visibility: hidden; position: absolute;", :type => "file"}/
                          %span.btn.btn-danger.ng-hide{:"ng-click" => "$flow.cancel()", :"ng-show" => "$flow.files.length"}
                            Удалить
              .mar-top.clearfix
                %a.btn.btn-sm.btn-primary.pull-right{"ng-click" => "save()"}
                  %i.fa.fa-pencil.fa-fw
                  =t("b1_admin.save")


              / %input.form-control{'close-text' => 'Close',
              /                     'type' => 'date',
              /                     'datepicker-popup' => '{{format}}',
              /                     'datepicker-options' => 'dateOptions',
              /                     'is-open' => 'end_opened',
              /                     'min-date' => 'item.date_start',
              /                     'max-date' => 'end_year',
              /                     name: 'date_end',
              /                     'ng-model' => 'item.date_end', type: 'text', required: true}
